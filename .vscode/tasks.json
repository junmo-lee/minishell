{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make fclean",
            "type": "shell",
            "command": "make",
            "args": ["fclean"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
				"cwd": "${workspaceFolder}"
			},
            "problemMatcher": []
        },
		{
            "label": "Build Mandatory",
            "type": "shell",
            "command": "make",
			"args": ["-j4", "all"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
			"options": {
				"cwd": "${workspaceFolder}"
			},
            "dependsOn": ["make fclean"]
        },
		{
            "label": "Build Debug",
            "type": "shell",
            "command": "make",
			"args": ["-j4", "all", "DEBUG_FLAG=1"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
			"options": {
				"cwd": "${workspaceFolder}"
			},
            "dependsOn": ["make fclean"]
        }
    ]
}